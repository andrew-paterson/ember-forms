<label class="{{unless showLabel 'placeholder'}}">{{label}}</label>
<div class="input-container">
	{{input
	  value=(readonly value)
	  focusOut=(action 'onFocusOut' value='target.value')
	  focusIn=(action 'onFocusIn' value='target.value')
	  keyUp=(action 'onKeyUp' value='target.value')
	  placeholder=label
	  autofocus=autofocus
		type=type
		readonly=readonly
		disabled=disabled
	}}
{{component inputIcon class='form-field-icon'}}
</div>
{{#if error}}
	<div data-test-id='field-error' class='field-error'>{{svg/icon-curved-arrow-right}}{{error}}</div>
{{/if}}
